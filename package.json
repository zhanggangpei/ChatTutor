{
  "name": "@chat-tutor/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "ChatTutor Monorepo",
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "dev": "pnpm --filter @chat-tutor/* dev",
    "dev:client": "pnpm --filter @chat-tutor/client dev",
    "dev:web": "pnpm --filter @chat-tutor/web dev",
    "build": "pnpm --filter @chat-tutor/* build",
    "build:client": "pnpm --filter @chat-tutor/client build",
    "build:web": "pnpm --filter @chat-tutor/web build",
    "db:push": "pnpm --filter @chat-tutor/db push",
    "db:generate": "pnpm --filter @chat-tutor/db generate",
    "db:studio": "pnpm --filter @chat-tutor/db studio"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "vitest": "^4.0.16"
  }
}
